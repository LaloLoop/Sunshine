<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="toolbarStyle">@style/Toolbar</item>
    </style>
    
    <!-- Settings activity theme -->
    <style name="SettingsTheme" parent="AppTheme">
    </style>

    <!-- Toolbar style -->
    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="popupTheme">@style/Theme.AppCompat.Light</item>
    </style>

    <!-- Style for ListView on 1 pane mode -->
    <style name="WeatherListStyle" parent="Widget.AppCompat.ListView">
        <item name="android:choiceMode">none</item>
    </style>

    <!-- List item style -->
    <style name="ListItemTextLarge" parent="@android:style/TextAppearance.Large">

    </style>

    <style name="ListItemTextSmall" parent="android:style/TextAppearance.Small">

    </style>

    <!-- Detail styles -->
    <style name="DetailTodayHeader">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="DetailTodaySubtitle">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <!-- Weather Details -->
    <style name="WeatherDetails" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_marginBottom">4dp</item>
    </style>

</resources>
