<resources xmlns:xliff="http://schemas.android.com/apk/res-auto">
    <!-- Main app title -->
    <string name="app_name" translatable="false">Sunshine</string>

    <!-- Actions labels -->
    <!--<string name="action_refresh">Refresh</string>-->
    <string name="action_settings">Settings</string>
    <string name="action_share">Share</string>
    <string name="action_view_on_map">View on map</string>

    <!-- Accessibility -->
    <string name="content_desc_weather_icon">Weather icon</string>
    <string name="content_desc_today_weather">Today weather</string>

    <!-- Activities titles -->
    <string name="title_activity_detail">Detail</string>
    <string name="title_activity_settings">Settings</string>

    <!-- Preferences values -->
    <!-- Label for location preference [CHAR LIMIT = 30] -->
    <string name="pref_location_label">Location</string>
    <!-- Key Name for storing location in SharedPreferences [CHAR LIMIT = NONE] -->
    <string name="pref_location_key" translatable="false">location</string>
    <!-- Default postal code for location [CHAR LIMIT = NONE] -->
    <string name="pref_location_default" translatable="false">94043</string>

    <!-- Key for units preference -->
    <string name="pref_units_key" translatable="false">units</string>
    <!-- Label / Title for unit's preference -->
    <string name="pref_units_label">Units</string>

    <!-- Labels for unit's preferences -->
    <string-array name="pref_units_labels" translatable="false">
        <item>@string/pref_units_metric</item>
        <item>@string/pref_units_imperial</item>
    </string-array>

    <!-- Possible values for units -->
    <string-array name="pref_units_values" translatable="false">
        <item>@string/pref_units_val_metric</item>
        <item>@string/pref_units_val_imperial</item>
    </string-array>

    <string name="pref_units_val_metric" translatable="false">metric</string>
    <string name="pref_units_val_imperial" translatable="false">imperial</string>

    <!-- Extra labels -->
    <string name="pref_units_metric">Metric</string>
    <string name="pref_units_imperial">Imperial</string>

    <!-- Default units option -->
    <string name="pref_units_default" translatable="false">metric</string>

    <!-- Error message for intent not existing app -->
    <string name="error_no_maps_app">You don\'t have any maps application, install one</string>

    <!-- Date label when displaying today's weather forecast [CHAR LIMIT=20] -->
    <string name="today">Today</string>

    <!-- Date label when displaying tomorrow's weather forecast [CHAR LIMIT=20] -->
    <string name="tomorrow">Tomorrow</string>

    <!-- Date format for displaying day of week and date (i.e. Mon Jun 1) [CHAR LIMIT=20] -->
    <string name="format_full_friendly_date" translatable="false"><xliff:g id="day">%1$s</xliff:g>, <xliff:g id="date">%2$s</xliff:g></string>

    <!-- Temperature formats in degrees [CHAR LIMIT=NONE] -->
    <string name="format_temperature" translatable="false"><xliff:g id="temp">%1.0f</xliff:g>\u00B0</string>

    <!-- Windspeed formats -->
    <!-- Wind in mph [CHAR LIMIT=25] -->
    <string name="format_wind_mph">
        Wind: <xliff:g id="speed">%1$1.0f</xliff:g> mph <xliff:g id="direction">%2$s</xliff:g>
    </string>

        <!-- Wind in kph [CHAR LIMIT=25] -->
    <string name="format_wind_kmh">
        Wind: <xliff:g id="speed">%1$1.0f</xliff:g> km/h <xliff:g id="direction">%2$s</xliff:g>
    </string>

    <!-- Pressure format CHAR LIMIT=25] -->
    <string name="format_pressure">Pressure: <xliff:g id="pressure">%1.0f</xliff:g> hPa</string>

    <!-- Humidity format CHAR LIMIT=25]-->
    <string name="format_humidity">Humidity: <xliff:g id="humidity">%1.0f</xliff:g> %%</string>

    <!-- Account type (for sync-adapter authenticator) -->
    <!-- SyncAdapter related -->
    <string name="sync_account_type" translatable="false">sunshine.example.com</string>
    <string name="content_authority" translatable="false">com.example.android.sunshine.app</string>

    <!-- Notification Format -->
    <string name="format_notification">
    Forecast: <xliff:g id="condition">%1$s</xliff:g> High: <xliff:g id="high">%2$s</xliff:g> Low: <xliff:g id="low">%3$s</xliff:g>
    </string>
    <!-- Strings related to Notification preference -->
    <string name="pref_last_notification" translatable="false">last_notification</string>

    <!-- Strings related to Notification Enabled preference -->
    <string name="pref_enable_notifications_key" translatable="false">enable_notifications</string>
    <string name="pref_enable_notifications_label">Weather Notifications</string>

    <string name="pref_enable_notifications_true">Enabled</string>
    <string name="pref_enable_notifications_false">Not Enabled</string>
    <string name="pref_enable_notifications_default" translatable="false">true</string>

    <!-- Notice messages -->
    <string name="no_weather_data">No weather information available</string>
    <string name="no_network_available">The network is not available to fetch weather data</string>
    <string name="server_is_down">Weather service not available at this moment</string>
    <string name="invalid_server">Check for updates for the Sunshine app</string>

    <!-- Location status shared pref -->
    <string name="pref_sync_status_key" translatable="false">sync_result</string>

</resources>
